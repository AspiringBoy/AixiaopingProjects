<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/yiqipin_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <com.weslide.lovesmallscreen.views.customview.CircleImageView
            android:id="@+id/host_pic1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/app_icon1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/host_pic1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/host_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至少1人"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/host_left_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="剩余08天08时08分"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/pt_together_tv_bg"
            android:gravity="center"
            android:text="一起拼"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/yiqipin_rll"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <com.weslide.lovesmallscreen.views.customview.CircleImageView
            android:id="@+id/host_pic2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/app_icon1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/host_pic2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/host_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至少1人"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/host_left_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="剩余08天08时08分"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/yiqipin_tv2"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/pt_together_tv_bg"
            android:gravity="center"
            android:text="一起拼"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>