<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如果想了解城市运营商更多信息"
                android:textColor="#333333"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/help_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询总部客服:"
                    android:textColor="#333333"
                    android:textSize="14dp" />

                <com.weslide.lovesmallscreen.view_yy.customview.AXPTextView_Line
                    android:id="@+id/help_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="020-89898989"
                    android:textColor="#4672e9"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/help_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:广州市天河区智慧城天顺路智慧广州先行区5栋4楼"
                android:textColor="#333333"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="#ff2b47"
            android:gravity="center"
            android:text="我想加入"
            android:textColor="#ffffff" />
    </LinearLayout>

    <com.weslide.lovesmallscreen.views.AXPWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll"></com.weslide.lovesmallscreen.views.AXPWebView>
</RelativeLayout>