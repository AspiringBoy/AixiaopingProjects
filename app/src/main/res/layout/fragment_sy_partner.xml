<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/axpypt" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="325dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/xinxibj"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_applay_tag_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_syhhr" />

            <TextView
                android:id="@+id/user_applay_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="升级事业合伙人基本信息"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dddddd" />

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/applay_partner_edt_bg"
            android:gravity="center_vertical"
            android:hint="姓名"
            android:paddingLeft="8dp" />

        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/applay_partner_edt_bg"
            android:gravity="center_vertical"
            android:hint="电话"
            android:paddingLeft="8dp" />


        <EditText
            android:id="@+id/msg_edt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/applay_partner_edt_bg"
            android:hint="留言"
            android:paddingLeft="8dp" />

        <com.rey.material.widget.Button
            android:id="@+id/commit_btn"
            app:v_styleId="@array/button_raise_color"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="16dp"
            android:text="提交信息"
            android:textColor="@color/white"
            android:textSize="@dimen/h4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/help_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果想了解城市运营商更多信息"
            android:textColor="#333333"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/help_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询总部客服:"
                android:textColor="#333333"
                android:textSize="14dp" />

            <com.weslide.lovesmallscreen.view_yy.customview.AXPTextView_Line
                android:id="@+id/help_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="020-89898989"
                android:textColor="#4672e9"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/help_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:广州市天河区智慧城天顺路智慧广州先行区5栋4楼"
            android:textColor="#333333"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>