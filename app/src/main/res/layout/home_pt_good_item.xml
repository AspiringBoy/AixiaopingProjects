<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pt_good_iv"
        android:layout_width="match_parent"
        android:src="@drawable/icon_morentouxiang"
        android:layout_height="95dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/pt_good_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:text="2018新年大吉2018新年大吉2018新年大吉"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/pt_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥2000.0"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/go_pt_tv"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_go_pt_bg"
            android:gravity="center"
            android:text="去拼团"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>
</LinearLayout>