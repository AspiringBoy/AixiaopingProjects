<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="0.5dp"/>

    <View
        android:layout_width="match_parent"
        android:background="#f4f4f4"
        android:layout_height="5dp"/>

    <ImageView
        android:id="@+id/title_rll"
        android:layout_width="match_parent"
        android:src="@drawable/sqgw_title"
        android:layout_height="40dp"></ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/brand_zone_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pinpaizhunqu" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nine_to_nine_baoyou_iv"
                android:layout_width="match_parent"
                android:layout_height="84.5dp"
                android:src="@drawable/nine_to_nine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/sqgw_media_rll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="数码影音"
                        android:textColor="#32c3ea"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/second_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:text="潮流数码精品"
                        android:textColor="#777777"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/sqgw_second_classify_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/sy_smyysp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd" />

                <RelativeLayout
                    android:id="@+id/sqgw_shoes_rll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/title_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="鞋包配饰"
                        android:textColor="#32c3ea"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/second_title_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_tv2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:text="潮流数码精品"
                        android:textColor="#777777"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/sqgw_second_classify_iv2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/sy_xbpssp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>