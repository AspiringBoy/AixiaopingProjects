<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view_yy.activity.AxpDiscountTicketActivity">

    <com.weslide.lovesmallscreen.views.custom.CustomToolbar
        android:id="@+id/axp_ticket_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:leftIv="@drawable/icon_fanhuij"
        app:rightIv="@drawable/icon_fenxiang"
        app:titleColor="#333333"
        app:titleName="爱小屏优惠券"
        app:titleSize="16dp"></com.weslide.lovesmallscreen.views.custom.CustomToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:background="@drawable/bj_up">

                <ImageView
                    android:id="@+id/user_face_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/icon_morentouxiang" />

                <TextView
                    android:id="@+id/store_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_face_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="9dp"
                    android:text="三只松鼠零食铺子"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="105dp"
                    android:layout_below="@id/store_name_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="169dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bsyhqbg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="#ff4460"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/ticket_price_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textColor="#ff4460"
                                android:textSize="25dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="使用期限"
                                android:textColor="#666666"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/limite_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="2017.05.31-06.31"
                                android:textColor="#666666"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/get_ticket_iv"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ljlq" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/good_item_rll"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:background="@drawable/bj_bt">

                <ImageView
                    android:id="@+id/good_icon"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_morentouxiang" />

                <TextView
                    android:id="@+id/good_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/good_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="28dp"
                    android:layout_toRightOf="@id/good_icon"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="金狐狸产后金狐狸产后金狐狸产后金狐狸产后金狐狸产后金狐狸产后金狐狸产后"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/consume_way_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/good_desc"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/good_icon"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/consume_way_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_sm_bydj" />

                    <TextView
                        android:id="@+id/consume_way_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包邮到家"
                        android:textColor="#ff4460"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/current_price_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/consume_way_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/good_icon"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现价:"
                        android:textColor="#333333"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/current_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥5000"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/current_price_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/good_icon"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/yongquanhou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="￥"
                        android:textColor="#ff4460"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/after_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="362.0"
                        android:textColor="#ff4460"
                        android:textSize="30dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sole_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:text="1220笔成交"
                    android:textColor="#999999"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/to_good_dt_rll"
                android:layout_width="match_parent"
                android:background="#f6f6f6"
                android:layout_height="56dp">

                <LinearLayout
                    android:id="@+id/check_detail_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看详情"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/more" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="活动详情"
                    android:textColor="#666666"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/action_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#999999"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
