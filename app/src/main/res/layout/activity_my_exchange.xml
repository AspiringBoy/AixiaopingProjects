<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_main_bg"
    tools:context="com.weslide.lovesmallscreen.exchange.activity.MyExchangeActivity">

    <com.weslide.lovesmallscreen.views.custom.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        app:leftIv="@drawable/icon_fanhuij"
        app:titleColor="@color/toolbar_title_color"
        app:titleName="我的帖子"
        app:titleSize="16dp"></com.weslide.lovesmallscreen.views.custom.CustomToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/my_reply_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_reply_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="我的帖子"
                android:textColor="#323232"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/my_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/my_reply_tag"
                android:text=""
                android:visibility="gone"
                android:textColor="#323232"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/gengduo" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/project_line_bg" />

        <RelativeLayout
            android:id="@+id/my_start_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_tart_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="我发起的"
                android:textColor="#323232"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/my_start_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/my_tart_tag"
                android:text=""
                android:visibility="gone"
                android:textColor="#323232"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/gengduo" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/project_line_bg" />

        <RelativeLayout
            android:id="@+id/invite_me_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invite_me_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="邀约我的"
                android:textColor="#323232"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/invite_me_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/invite_me_tag"
                android:text=""
                android:visibility="gone"
                android:textColor="#323232"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/gengduo" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/project_line_bg" />

        <RelativeLayout
            android:id="@+id/my_deal_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/toolbar"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_deal_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="我交易的"
                android:textColor="#323232"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/my_deal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/my_deal_tag"
                android:text=""
                android:visibility="gone"
                android:textColor="#323232"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/gengduo" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/project_line_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/download_seller_qr"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="下载爱小屏-商家版"
            android:textColor="#323232"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="注:发布新的换货物品,需使用爱小屏商家版"
            android:textColor="#646464"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>
