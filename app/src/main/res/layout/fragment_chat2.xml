<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.weslide.lovesmallscreen.views.custom.CustomToolbar
        android:layout_width="match_parent"
        app:titleColor="#333333"
        app:titleName="聊天列表"
        app:titleSize="17dp"
        android:background="@color/main_color_white"
        android:layout_height="42dp"></com.weslide.lovesmallscreen.views.custom.CustomToolbar>

    <View
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/header_rll"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.weslide.lovesmallscreen.view_yy.customview.RoundImgView
            android:id="@+id/myfans_iv"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/icon_qun"
            app:roundRadios="5dp"
            app:type="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myfans_iv"
            android:text="我的粉丝"
            android:id="@+id/myfans_tv"
            android:layout_alignTop="@id/myfans_iv"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myfans_iv"
            android:text="在此您可以与自己的粉丝取得联系"
            android:layout_below="@id/myfans_tv"
            android:layout_alignBottom="@id/myfans_iv"
            android:gravity="bottom"
            android:layout_marginLeft="10dp"
            android:textColor="#999999"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/icon_chakangengduo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="0.5dp"/>

    <FrameLayout
        android:id="@+id/container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>