<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view_yy.activity.PutTogetherActivity">

    <com.weslide.lovesmallscreen.views.custom.CustomToolbar
        android:id="@+id/put_together_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:leftIv="@drawable/icon_fanhuij"
        app:titleColor="@color/black"
        app:titleName="拼团成功"
        app:titleSize="16dp"></com.weslide.lovesmallscreen.views.custom.CustomToolbar>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/put_together_toolbar"
        android:background="@color/project_line_bg" />

    <LinearLayout
        android:id="@+id/icon_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <com.weslide.lovesmallscreen.views.customview.CircleImageView
            android:id="@+id/host_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/question_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/question" />
    </LinearLayout>

    <TextView
        android:id="@+id/host_name"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/line_view"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/pt_host_tv_bg"
        android:gravity="center"
        android:text="拼主"
        android:textColor="#000000"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/pt_left_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拼单剩余时间:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/left_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="72时00分00秒"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/send_right_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pt_left_time_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:text="拼团人满后立即发货"
        android:textColor="#000000"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/lack_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_right_now"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还差"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lack_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ff2b47"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/invate_frend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lack_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="赶紧邀请好友一起拼单吧!"
        android:textColor="#000000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invate_frend_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_weixin" />

        <ImageView
            android:id="@+id/icon_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:src="@drawable/icon_qq" />

        <ImageView
            android:id="@+id/icon_pengyouquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:src="@drawable/icon_pengyouquan" />

        <ImageView
            android:id="@+id/icon_qq_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:src="@drawable/icon_qqkongjian" />
    </LinearLayout>
</RelativeLayout>
