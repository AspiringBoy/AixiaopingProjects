<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.weslide.lovesmallscreen.views.custom.CustomToolbar
            android:id="@+id/ticket_good_dt_toolbar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/main_color_white"
            app:leftIv="@drawable/icon_fanhuij"
            app:titleColor="@color/toolbar_title_color"
            app:titleName="宝贝推广详情"
            app:titleSize="16sp"></com.weslide.lovesmallscreen.views.custom.CustomToolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4"
                android:orientation="vertical"
                android:paddingBottom="48dp">

                <ImageView
                    android:id="@+id/ticket_good_dt_banner_iv"
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_morentouxiang" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/ticket_good_dt_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="93dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸金狐狸"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/after_ticket_price_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ticket_good_dt_desc_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="券后价"
                        android:textColor="#ff2b47"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/after_ticket_price_doller_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/after_ticket_price_tag"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/after_ticket_price_tag"
                        android:text="￥"
                        android:textColor="#ff2b47"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/after_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/after_ticket_price_tag"
                        android:layout_toRightOf="@id/after_ticket_price_doller_tag"
                        android:text="178.00"
                        android:textColor="#ff2b47"
                        android:textSize="17sp" />

                    <com.weslide.lovesmallscreen.view_yy.customview.TextViewWithLine
                        android:id="@+id/original_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/after_ticket_price_tag"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:text="原价￥5000"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/ticket_goods_detail_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/shangpingxiangqing" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ticket_good_dt_desc_tv"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_toLeftOf="@id/ticket_goods_detail_iv"
                        android:background="@drawable/rectangle_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="26dp"
                            android:layout_height="25dp"
                            android:background="@drawable/rectangle_half_bg"
                            android:gravity="center"
                            android:text="券"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="200.0元"
                            android:textColor="#ff2b47"
                            android:textSize="15dp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="详细信息"
                        android:textColor="#333333"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ygsy_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sm_ygsy" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:text="预估收益"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/ticket_good_dt_predict_profit_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="￥370.0"
                                    android:textColor="#ff2b47"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ygsy_ll"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sm_yyq" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:text="剩余券量"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/ticket_good_dt_left_ticket_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="300张"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ddxf_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ticket_good_dt_consume_state_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_sm_ddxf" />

                                <TextView
                                    android:id="@+id/ticket_good_dt_consume_state_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:text="到店消费"
                                    android:textColor="#ff2b47"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ddxf_ll"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="销量"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/ticket_good_dt_slaes_num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="4.3万"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="15dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="过期时间"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/ticket_good_dt_noUse_time_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="2017-06-02"
                                    android:textColor="#333333"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_sm_sysj" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="使用时间"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/ticket_good_dt_use_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="20天"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--<com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/ticket_good_dt_btn_share"
                    android:layout_width="330dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/ticket_good_dt_btn_color"
                    android:gravity="center"
                    android:text="分享推广"></com.gc.materialdesign.views.ButtonRectangle>-->


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ticket_good_dt_btn_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:alpha="0.7"
            android:textColor="#ffffff"
            android:background="@color/ticket_good_dt_btn_color"
            android:gravity="center"
            android:text="分享推广"></Button>

        <Button
            android:id="@+id/ticket_good_dt_btn_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:alpha="0.7"
            android:textColor="#ffffff"
            android:background="@drawable/send_constact_btn_bg"
            android:gravity="center"
            android:text="立即购买"></Button>

    </LinearLayout>

</RelativeLayout>