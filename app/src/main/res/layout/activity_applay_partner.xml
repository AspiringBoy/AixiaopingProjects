<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <com.weslide.lovesmallscreen.view_yy.customview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/main_color_white">

                <ImageView
                    android:id="@+id/back_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_fanhuij" />

                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_fenxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="申请合伙人"
                    android:textColor="#333333"
                    android:textSize="17dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/hhrbj"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="城市里的稻草人"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/user_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="18188888888"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/user_tag_iv"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/hhr_icon" />

                        <TextView
                            android:id="@+id/user_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="粉丝"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <!--<ImageView
                            android:id="@+id/yiwen_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/icon_yiwen" />-->
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/fans_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/axpfs_icon" />

                        <com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                            android:id="@+id/user_face_iv1"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/icon_morentouxiang"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="粉丝"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hhr_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/hhr_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/syhhr_icon" />

                        <com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                            android:id="@+id/user_face_iv2"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/icon_morentouxiang"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="合伙人"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/syhhr_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="86dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/syhhr_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/csdl_icon" />

                        <com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                            android:id="@+id/user_face_iv3"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/icon_morentouxiang"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="事业合伙人"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/yys_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="57dp"
                    android:src="@drawable/csdl_icon"
                    android:visibility="gone" />

                <!--<com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                    android:id="@+id/user_face_iv3"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="110dp"
                    android:src="@drawable/icon_morentouxiang"
                    android:visibility="visible" />-->

                <ImageView
                    android:id="@+id/syhhr_shengji_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/syhhr_ll"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="36dp"
                    android:src="@drawable/shengji"
                    android:visibility="gone" />


                <!--<com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                    android:id="@+id/user_face_iv1"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/icon_morentouxiang"
                    android:visibility="gone" />-->

                <!--<com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                    android:id="@+id/user_face_iv2"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="122dp"
                    android:src="@drawable/icon_morentouxiang"
                    android:visibility="gone" />-->

                <ImageView
                    android:id="@+id/hhr_shengji_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/hhr_ll"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/shengji"
                    android:visibility="gone" />

                <com.weslide.lovesmallscreen.view_yy.customview.MyCircleImageView
                    android:id="@+id/user_face_iv4"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="118dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/icon_morentouxiang"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/yys_shengji_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/user_face_iv4"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/shengji"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/web_fl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></FrameLayout>

            </RelativeLayout>

        </LinearLayout>
    </com.weslide.lovesmallscreen.view_yy.customview.ObservableScrollView>

    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#ff2b47"
        android:gravity="center"
        android:text="我想加入"
        android:textColor="#ffffff" />

</RelativeLayout>