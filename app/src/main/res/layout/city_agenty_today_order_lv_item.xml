<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/city_agenty_userFace_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/csdl_yhtx" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/city_agenty_userFace_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city_agenty_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18154566666"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/city_agenty_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="用户名称"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/city_agenty_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:text="已结算"
            android:textColor="#ff6500"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/city_agenty_order_state"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/city_agenty_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00012546788885"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="360dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/city_agenty_order_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/csdl_yhtx" />

        <ImageView
            android:id="@+id/city_agency_order_status_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignRight="@id/city_agenty_order_img"
            android:layout_alignTop="@id/city_agenty_order_img" />

        <TextView
            android:id="@+id/city_agenty_order_describtion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/city_agenty_order_img"
            android:maxLines="2"
            android:lineSpacingExtra="3dp"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/pay_money_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_agenty_order_describtion"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/city_agenty_order_img"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款金额"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/city_agenty_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="120.0"
                android:textColor="#ff6500"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_agenty_order_describtion"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/pay_money_ll"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效果预估"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/city_agenty_estimates_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10.2"
                android:textColor="#ff6500"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="360dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单来源:"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/city_agenty_order_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="自己"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>


        <!--<TextView
            android:id="@+id/city_agenty_order_date_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="15:30:30"
            android:textColor="#999999"
            android:textSize="12sp" />-->

        <TextView
            android:id="@+id/city_agenty_order_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2016-2-26"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/city_agenty_order_date_day"
            android:text="订单日期:"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>