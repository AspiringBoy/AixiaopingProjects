<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/good_view_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/exchange_good_layer_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="178dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="178dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="类库离开房间爱路附近拉开飞机来我卡死了都分开就爱死了对方空间啊slj"
            android:textColor="#323232"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="市场价:￥1800.0"
            android:textColor="@color/main_color_red"
            android:textSize="@dimen/h8" />

        <LinearLayout
            android:id="@+id/note_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="想换:"
                android:textColor="#646464"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/note_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/exchange_note_tv_bg"
                android:padding="6dp"
                android:text="小黄车"
                android:textColor="#969696"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/note_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/exchange_note_tv_bg"
                android:padding="6dp"
                android:text="小黄车"
                android:textColor="#969696"
                android:textSize="10dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>