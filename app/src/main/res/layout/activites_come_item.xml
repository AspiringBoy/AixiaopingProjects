<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activites_come_title"
        android:layout_width="match_parent"
        android:src="@drawable/hhlx_title"
        android:layout_height="30dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_xianshi" />

            <TextView
                android:id="@+id/tv_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6.5dp"
                android:layout_toRightOf="@id/xianshi"
                android:gravity="center"
                android:text="限时秒杀"
                android:textColor="#ff2d47"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/activities_come_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/xianshi"
                android:layout_marginRight="11dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activities_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="14:00场"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <com.weslide.lovesmallscreen.views.custom.Line_TextView
                    android:id="@+id/to_startTime_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ff2d47"
                    android:textSize="10sp" />

                <com.weslide.lovesmallscreen.views.custom.Line_TextView
                    android:id="@+id/to_startTime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ff2d47"
                    android:textSize="10sp" />

                <com.weslide.lovesmallscreen.views.custom.Line_TextView
                    android:id="@+id/to_startTime_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="00"
                    android:textColor="#ff2d47"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activities_come_limit_skill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/xsqg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="54dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/backgroud" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activities_score_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/sy_jifenduihuan" />

            <TextView
                android:id="@+id/tv_score_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6.5dp"
                android:layout_toRightOf="@id/activities_score_exchange"
                android:gravity="center"
                android:text="积分兑换"
                android:textColor="#999999"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/activities_come_score_exchange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/jfdh"
                android:layout_marginRight="10dp"
                android:layout_marginTop="54dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>