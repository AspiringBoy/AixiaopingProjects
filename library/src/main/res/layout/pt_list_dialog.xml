<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="270dp"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_rec_bg">

        <Button
            android:id="@+id/btn_cal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:text="取消"
            android:textColor="#222222"
            android:textSize="15dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:id="@+id/line_view"
            android:layout_above="@id/btn_cal"
            android:layout_height="0.5dp"/>

        <ListView
            android:id="@+id/pt_dialog_lv"
            android:layout_above="@id/line_view"
            android:layout_width="match_parent"
            android:divider="@color/project_line_bg"
            android:scrollbars="none"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:dividerHeight="0.5dp"
            android:layout_height="match_parent"></ListView>
    </RelativeLayout>

</LinearLayout>