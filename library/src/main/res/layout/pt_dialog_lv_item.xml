<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <com.weslide.lovesmallscreen.views.customview.CircleImageView
            android:id="@+id/pt_user_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_morentouxiang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pt_user_face"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pt_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至少1人"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pt_left_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="剩余08天08时08分08秒"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pt_together"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/pt_together_tv_bg"
            android:gravity="center"
            android:text="一起拼"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>