<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="8dp"
        android:text="监考老师发动机了独守空房收水电费水电费快来人他"
        android:textColor="@color/font_color"
        android:textSize="@dimen/h4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_goods_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11积分"
            android:textColor="@color/main_color_red"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/tv_tag_red_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="4dp"
            android:background="@color/orange"
            android:text="红包可抵20元"
            android:textColor="@color/white"
            android:textSize="@dimen/h5" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="￥30"
            android:textColor="@color/font_content_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_express_tactics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sm_ddxf" />

            <TextView
                android:id="@+id/tv_express_tactics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:text="全国包邮"
                android:textColor="#ff4460" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="4dp"
            android:text="销量:"
            android:textColor="@color/font_content_color" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/rights_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/real_good_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gouxuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="正品保证"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/send_fast_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gouxuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="快速发货"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/after_careless_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gouxuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="售后无忧"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.weslide.lovesmallscreen.views.goods.SpecView
            android:id="@+id/sv_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.weslide.lovesmallscreen.views.goods.SpecView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：" />

        <com.weslide.lovesmallscreen.views.widget.AddAndSubtractView
            android:id="@+id/as_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.weslide.lovesmallscreen.views.widget.AddAndSubtractView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/score_no_charge_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="(积分商品不可退单)"
                android:textColor="@color/main_color_red" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/project_line_bg"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/look_other_team"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="正在拼团,可直接参与"
            android:textColor="#222222"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_nextstep_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/next_iv"
            android:text="查看更多"
            android:textColor="#999999"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:id="@+id/team_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <com.weslide.lovesmallscreen.view_yy.customview.UPMarqueeView
        android:id="@+id/upmarquee_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <View
        android:id="@+id/team_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seller_layout_height"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_seller_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/icon_app" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:maxLines="2"
                    android:maxWidth="140dp"
                    android:text="YY高阿达吧"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/h8" />

                <android.support.v7.widget.GridLayout
                    android:id="@+id/gl_preferentials"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    app:columnCount="3">

                    <ImageView
                        android:id="@+id/iv_preferentials_1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_app" />

                    <ImageView
                        android:id="@+id/iv_preferentials_2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_app" />

                    <ImageView
                        android:id="@+id/iv_preferentials_3"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_app" />

                </android.support.v7.widget.GridLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_seller_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="天河区中山中路80号"
                android:textSize="@dimen/h5" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/seller_layout_right_width"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_seller"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rect_orange"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:text="进店逛逛"
                android:textColor="@color/btn_orange"
                android:textSize="@dimen/h5">

            </Button>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

</LinearLayout>