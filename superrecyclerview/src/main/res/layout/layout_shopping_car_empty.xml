<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/gouwuchetu" />

        <TextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="我的购物车空空如也"
            android:textColor="#999999"
            android:textSize="16sp" />

        <com.rey.material.widget.Button
            android:id="@+id/btn_empty_reload"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="去逛逛"
            android:background="@drawable/btn_bg_no_click"
            android:textColor="#ff2d47" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#cccccc"
            android:textSize="13sp"
            android:layout_marginTop="45dp"
            android:text="注: 优惠券商品放入购物车的，请在淘宝购物车查看"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>