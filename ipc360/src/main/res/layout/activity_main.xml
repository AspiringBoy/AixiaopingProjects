<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 系统模块（ISystem）的接口 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统模块（ISystem）的接口"/>
        <Button
            android:id="@+id/btn_xminit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="用户登录" />
            <Button
                android:id="@+id/login_demo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="体验账户登录" />
        </LinearLayout>
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户登出" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/registermgr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="注册mgr服务器连接状态回调" />
            <Button
                android:id="@+id/unregistermgr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="反注册mgr服务器连接状态回调" />
        </LinearLayout>
        <Button
            android:id="@+id/loginmgr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接mgr服务器" />
        <Button
            android:id="@+id/getdevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取设备" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/registeronlinelis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设备在线状态的获取回调注册" />
            <Button
                android:id="@+id/unregisteronlinelis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="反注册设备在线状态的获取回调注册" />
        </LinearLayout>

        <Button
            android:id="@+id/getonlinestate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备在线状态的获取(这里只测试第一个设备)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- 事件分发模块（IXmSysEventDistributor）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="事件分发模块（IXmSysEventDistributor）的接口"/>
                <Button
                    android:id="@+id/xmSysEventDistributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />

                <!-- 日志记录模块（IXmLogConfig）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="日志记录模块（IXmLogConfig）的接口"/>
                <Button
                    android:id="@+id/xmLogConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />

                <!-- 添加模块（IXmBinderManager）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加模块（IXmBinderManager）的接口"/>
                <Button
                    android:id="@+id/xmBinderManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />

                <!-- 实时播放模块（IRealplayCameraCtrl ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="实时播放模块（IRealplayCameraCtrl ）的接口"/>
                <Button
                    android:id="@+id/toplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- 实时播放模块（IRealplayCameraCtrl ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="账号管理模块（IXmAccountManager）的接口"/>
                <Button
                    android:id="@+id/xmAccountManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
                <!-- 设备信息设置模块（IXmInfoManager ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备信息设置模块（IXmInfoManager ）的接口"/>
                <Button
                    android:id="@+id/xmInfoManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
                <!-- 负责设备对讲功能模块（IXmTalkManager  ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="负责设备对讲功能模块（IXmTalkManager ）的接口"/>
                <Button
                    android:id="@+id/xmTalkManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
                <!-- 图片和文件播放的模块（IXmFilePlayCtrl ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片和文件播放的模块（IXmPlaybackCameraCtrl ）的接口"/>
                <Button
                    android:id="@+id/xmFilePlayCtrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
                <!-- 负责文件回放模块（IXmFilePlayCtrl ）的接口 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="负责文件回放模块（IXmPlaybackCameraCtrl ）的接口"/>
                <Button
                    android:id="@+id/xmPlaybackCameraCtrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO TO>>" />
            </LinearLayout>
        </LinearLayout>

        <!-- 查看日志打印 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="查看日志打印"/>
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="false"
            android:visibility="gone"
            android:background="#dddddd">
            <TextView
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dddddd"
                android:textColor="#000000"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
